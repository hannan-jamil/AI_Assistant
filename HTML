    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Chatbot</title>
    <style>
        body.patient {
            background-color: lightblue;
        }
        body.doctor {
            background-color: lightgreen;
        }
        #chatbot {
            width: 100%;
            height: 500px;
        }
    </style>
</head>
<body>
    <h1>Medical Chatbot</h1>
    <button onclick="setBackground('patient')">Patient</button>
    <button onclick="setBackground('doctor')">Doctor</button>

    <!-- Chatbot Container -->
    <iframe id="chatbot" src="YOUR_VOICEFLOW_EMBED_LINK"></iframe>

    <script>
        function setBackground(role) {
            document.body.className = role;
        }
    </script>
<script type="text/javascript">
  (function(d, t) {
      var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
      v.onload = function() {
        window.voiceflow.chat.load({
          verify: { projectID: '6703ac8b01679f0551ab139e' },
          url: 'https://general-runtime.voiceflow.com',
          versionID: 'production'
        });
      }
      v.src = "https://cdn.voiceflow.com/widget/bundle.mjs"; v.type = "text/javascript"; s.parentNode.insertBefore(v, s);
  })(document, 'script');
</script>
</body>
